# Environment Configuration - Chat 2 Enhanced
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your-very-secure-secret-key-change-this-in-production-chat2
ENCRYPTION_KEY=your-32-char-encryption-key-here!
HASH_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Database Configuration - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=api_framework
DB_USER=api_user
DB_PASSWORD=api_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration - Caching & Sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=api_v2
# For Redis Cluster (optional)
# REDIS_CLUSTER_NODES=localhost:6379,localhost:6380

# Logging Configuration - Chat 2 Enhanced
LOG_LEVEL=info
LOG_TO_DATABASE=true
LOG_TO_CONSOLE=true

# Performance & Monitoring
ENABLE_METRICS=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_WARNING_THRESHOLD=500

# Rate Limiting
DEFAULT_RATE_LIMIT=100/hour
BURST_RATE_LIMIT=10/minute

# Cache Settings
DEFAULT_CACHE_TTL=300
LONG_CACHE_TTL=3600
SHORT_CACHE_TTL=60

# Features Flags
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CIRCUIT_BREAKER=true

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_LOGS=true