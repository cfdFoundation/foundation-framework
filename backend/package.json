{
  "name": "api-framework-chat2",
  "version": "2.0.0",
  "description": "Auto-registering API framework with Chat 2 infrastructure - Database, Logging, Error Handling",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "db:setup": "psql -U postgres -f database_setup.sql",
    "db:reset": "npm run db:drop && npm run db:setup",
    "db:drop": "psql -U postgres -c 'DROP DATABASE IF EXISTS api_framework;'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "logs:query": "node scripts/queryLogs.js",
    "logs:cleanup": "node scripts/cleanupLogs.js",
    "health": "curl http://localhost:3000/health",
    "metrics": "curl http://localhost:3000/api/metrics"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^9.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.5",
    "bcrypt": "^5.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "api",
    "framework",
    "auto-registry",
    "dependency-injection",
    "postgresql",
    "redis",
    "logging",
    "error-handling",
    "middleware",
    "microservices"
  ],
  "author": "Your Name",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 10000
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off"
    }
  }
}