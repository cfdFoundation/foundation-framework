# Chat 3 Production Environment Configuration
# Copy to .env and customize for your environment

# Application Settings
NODE_ENV=production
PORT=3000
INSTANCE_NAME=api-node

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=super-secure-jwt-secret-change-in-production-chat3-very-long-key
ENCRYPTION_KEY=32-char-encryption-key-change-me!
HASH_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Database Configuration - PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=api_framework
DB_USER=api_user
DB_PASSWORD=secure_password_123
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Configuration - Caching & Sessions
REDIS_CLUSTER_NODES=redis-1:6379,redis-2:6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=0
REDIS_KEY_PREFIX=api_v2
REDIS_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_DATABASE=true
LOG_TO_CONSOLE=true
LOG_BATCH_SIZE=100
LOG_FLUSH_INTERVAL=5000

# Performance & Monitoring
ENABLE_METRICS=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_WARNING_THRESHOLD=500
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
DEFAULT_RATE_LIMIT=1000/hour
BURST_RATE_LIMIT=50/minute
AUTH_RATE_LIMIT=20/hour
UPLOAD_RATE_LIMIT=10/hour

# Cache Settings
DEFAULT_CACHE_TTL=300
LONG_CACHE_TTL=3600
SHORT_CACHE_TTL=60
ENABLE_CACHE_COMPRESSION=true

# Feature Flags
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_API_DOCUMENTATION=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration (if needed)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=api@yourdomain.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# External API Keys (if needed)
# THIRD_PARTY_API_KEY=your-api-key
# PAYMENT_GATEWAY_KEY=your-payment-key

# Development Tools (set to false in production)
ENABLE_DEBUG_LOGS=false
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_LOGS=true
ENABLE_API_DOCS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# Backup and Maintenance
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
CLEANUP_LOGS_DAYS=30
CLEANUP_SESSIONS_DAYS=7